<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Account"
        android:textSize="40dp" 
        android:paddingBottom = "10dp"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Username"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/etCreateUsername"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:hint="Username" 
        android:textColor="#ff000000"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create a password"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/etCreateInitialPassword"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:hint="Password" 
        android:password="true"
        android:textColor="#ff000000"/>
    
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter again"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/etCreateSecondPassword"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:hint="Password" 
        android:password="true"
        android:textColor="#ff000000"/>
    

    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Account!"
        android:textSize="15dp" />
    
    
    <Button
        android:id = "@+id/bCreateNewAccount"
        android:layout_width="fill_parent" 
        android:layout_height="60dp"
        android:text="Create an Account" />
    
    <TextView
        android:id = "@+id/tvLoginErrorMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp" />

    
</LinearLayout>
